---
import NavButton from "../components/NavButton.astro";
import { mainTitle } from "../components/pageTitle";

interface Props {
  title: string;
  description: string;
  pageType: "website" | "article";
}

const { title, description, pageType } = Astro.props;
---

<!doctype html>
<html lang="zh">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content={mainTitle} />
    <meta property="og:type" content={pageType} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@" />
    <meta name="twitter:creator" content="@" />
    <link rel="cononical" href={Astro.url} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="font-sans flex flex-col m-auto items-stretch px-8 min-h-screen max-w-[54rem]"
  >
    <header
      class="font-light flex flex-col gap-y-4 pt-12 pb-14 w-full items-start"
    >
      <a href="/">
        <h1 class="text-2xl">
          {mainTitle}
        </h1>
      </a>
      <nav>
        <ul class="text-lg flex gap-x-4">
          <NavButton name="Home" link="/" />
          <NavButton name="About" link="/about" />
          <NavButton name="RSS" link="/rss.xml" />
          <NavButton name="Landing Page" link="https://rewired.moe" />
        </ul>
      </nav>
    </header>
    <main class="w-full">
      <slot />
    </main>
    <div class="grow shrink"></div>
    <footer
      class="font-light text-xs text-center my-8 py-8 text-stone-300 leading-6"
    >
      <p>
        This website is unapologetically designed from the ground up using
        Astro.
      </p>
      <p>Copyright Â© MMXXV Rewired All Rights Reserved.</p>
    </footer>
  </body>
</html>

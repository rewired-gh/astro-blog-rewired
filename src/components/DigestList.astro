---
import ArticleMeta from "./ArticleMeta.astro";
import { type DigestEntry } from "./digest";

interface Props {
  digests: DigestEntry[];
}

const { digests } = Astro.props;
---

<ol class="flex flex-col gap-y-8">
  {
    digests.map((digest) => (
      <li class="group">
        <ArticleMeta date={digest.date} tags={digest.tags} />
        <a href={digest.path}>
          <h2
            class="text-[21px] pb-2 gap-x-2
            after:w-1 after:h-1 after:bg-cyan-500 after:inline-block
            after:rounded-full after:transition-all after:duration-300
            after:opacity-0 after:blur-sm after:align-middle
            group-hover:after:opacity-100 group-hover:after:blur-0"
          >
            {digest.title}
          </h2>
          <p class="leading-6 text-sm md:text-base">{digest.excerpt}</p>
        </a>
      </li>
    ))
  }
</ol>

---
interface Props {
  date: Date;
  tags: string[];
}

const { date, tags } = Astro.props;
---

<div class="flex w-full justify-between gap-x-3 truncate text-sm text-stone-500">
  <span>
    {date.toDateString()}
  </span>
  <ul class="flex flex-row gap-x-2">
    {
      tags.map((tag) => (
        <li>
          <a
            tabindex="0"
            href={'/tag/' + tag}
            class="hocus:text-cyan-700 decoration-2 transition-colors duration-300 focus:underline focus:outline-0"
          >
            #{tag}
          </a>
        </li>
      ))
    }
  </ul>
</div>
